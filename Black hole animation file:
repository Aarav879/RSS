import { useEffect, useState } from "react";
import { ArrowDown } from "lucide-react";
import ChemistryElements from "./chemistry-elements";

export default function HeroSection() {
  const [titleRevealed, setTitleRevealed] = useState(false);

  useEffect(() => {
    const handleScroll = () => {
      if (window.scrollY > 100) {
        setTitleRevealed(true);
      }
    };

    window.addEventListener('scroll', handleScroll);
    return () => window.removeEventListener('scroll', handleScroll);
  }, []);

  const scrollToAbout = () => {
    const aboutSection = document.getElementById('about');
    if (aboutSection) {
      aboutSection.scrollIntoView({ behavior: 'smooth' });
    }
  };

  return (
    <section id="hero" className="relative h-screen flex flex-col justify-center items-center overflow-hidden bg-black">
      {/* Chemistry Elements Background */}
      <ChemistryElements />
      
      {/* Animated Background Elements */}
      <div className="absolute inset-0">
        <div className="absolute top-1/4 left-1/4 w-2 h-2 bg-royal-gold rounded-full animate-pulse-slow"></div>
        <div className="absolute top-3/4 right-1/4 w-1 h-1 bg-white rounded-full animate-float"></div>
        <div className="absolute top-1/2 left-1/6 w-1.5 h-1.5 bg-royal-gold/60 rounded-full animate-pulse"></div>
        <div className="absolute bottom-1/4 right-1/3 w-1 h-1 bg-white/80 rounded-full animate-float" style={{ animationDelay: '2s' }}></div>
      </div>
      
      {/* Black Hole Animation */}
      <div className="relative z-10 mb-8">
        {/* Outer Event Horizon */}
        <div className="w-56 h-56 md:w-72 md:h-72 rounded-full absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 animate-blackhole-event-horizon border border-royal-gold/30"></div>
        
        {/* Accretion Disk */}
        <div className="w-52 h-52 md:w-68 md:h-68 rounded-full absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-gradient-to-r from-royal-gold/20 via-transparent to-royal-gold/10 animate-blackhole-accretion"></div>
        
        {/* Main Black Hole */}
        <div className="w-48 h-48 md:w-64 md:h-64 rounded-full bg-gradient-radial-black-hole animate-blackhole-spin relative shadow-2xl">
          <div className="absolute inset-4 rounded-full bg-gradient-to-r from-transparent via-royal-navy/50 to-black animate-swirl"></div>
          <div className="absolute inset-8 rounded-full bg-gradient-to-r from-transparent to-black animate-pulse-slow"></div>
          <div className="absolute inset-12 rounded-full bg-black shadow-inner"></div>
        </div>
        
        {/* Orbiting Matter */}
        <div className="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
          <div className="w-2 h-2 bg-royal-gold rounded-full shadow-lg" style={{ 
            animation: 'orbit-large 15s infinite linear' 
          }}></div>
        </div>
        <div className="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
          <div className="w-1.5 h-1.5 bg-yellow-400 rounded-full shadow-md" style={{ 
            animation: 'orbit 20s infinite linear',
            animationDelay: '3s' 
          }}></div>
        </div>
        <div className="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
          <div className="w-1 h-1 bg-white rounded-full shadow-sm" style={{ 
            animation: 'orbit-small 25s infinite linear',
            animationDelay: '7s' 
          }}></div>
        </div>
      </div>

      {/* Hero Text */}
      <div className="text-center z-20 px-4">
        <h1 className={`font-playfair text-4xl md:text-6xl lg:text-7xl font-bold text-royal-gold mb-4 scroll-reveal transition-all duration-1000 ${titleRevealed ? 'revealed' : ''}`}>
          Royal Society of Sciences
        </h1>
        <h2 className="font-playfair text-xl md:text-2xl lg:text-3xl text-white/90 mb-8 scroll-reveal" style={{ animationDelay: '0.5s' }}>
          Royal College Curepipe
        </h2>
        <p className="text-lg md:text-xl text-gray-300 max-w-2xl mx-auto leading-relaxed scroll-reveal" style={{ animationDelay: '1s' }}>
          Advancing scientific knowledge and fostering academic excellence through research, collaboration, and innovation
        </p>
        <div className="mt-12 scroll-reveal" style={{ animationDelay: '1.5s' }}>
          <button 
            onClick={scrollToAbout}
            className="inline-flex items-center px-8 py-3 bg-royal-gold hover:bg-yellow-600 text-royal-navy font-semibold rounded-full transition-all duration-300 transform hover:scale-105"
          >
            Explore Our Mission
            <ArrowDown className="ml-2 w-4 h-4" />
          </button>
        </div>
      </div>

      {/* Scroll Indicator */}
      <div className="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <div className="w-6 h-10 border-2 border-royal-gold rounded-full flex justify-center">
          <div className="w-1 h-3 bg-royal-gold rounded-full mt-2 animate-pulse"></div>
        </div>
      </div>
    </section>
  );
}
